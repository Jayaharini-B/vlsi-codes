module bitwise_operators();
  initial begin
    //negation
    $display("~4'b0001=%b",(~4'b0001));
    $display("~4'bx001=%b",(~4'bx001));
    $display("~4'bz001=%b",(~4'bz001));
    //and
    $display("4'b1101 & 4'b0001=%b",(4'b1101 & 4'b0001));
    //or
    $display("4'b0x01 | 4'b0101=%b",(4'b0x01 | 4'b0101));
    //xor
    $display("4'b0001 ^ 4'bz001=%b",(4'b0001 ^ 4'bz001));
    //xnor
    $display("4'b11x1 ~^ 4'b1001=%b",(4'b11x1 ~^ 4'b1001));
  end
    endmodule
