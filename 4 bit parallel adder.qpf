module top(a,b,sum,cout);
input [3:0] a,b;
output [3:0] sum;
output cout;
wire [2:0] c;
full_adder fa0 (a[0],b[0],1'b0,sum[0],c[0]);
full_adder fa1 (a[1],b[1],c[0],sum[1],c[1]);
full_adder fa2 (a[2],b[2],c[1],sum[2],c[2]);
full_adder fa3 (a[3],b[3],c[2],sum[3],cout);
endmodule


module full_adder(a,b,cin,sum,cout);
input a,b,cin;
output sum,cout;
wire x,y,z;
xor a1(x,a,b);
xor a2(sum,x,cin);
and a3(y,a,b);
and a4(z,x,cin);
or a5(cout,z,y);
endmodule